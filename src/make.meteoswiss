#!/bin/bash

# Set environment variables and build the Flexpart executable for use by
# MeteoSwiss at CSCS

# Settings
# --------
# Environment file
flexpart_env=FLEXPART.env

# Makefile
makefile=makefile.meteoswiss
# --------

# Load environment
. $flexpart_env

# Build application
echo Builing application using $makefile
make -f $makefile $@ ncf=yes
